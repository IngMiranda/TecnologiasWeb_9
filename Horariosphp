<?php
// Configuración de la base de datos
$servername = "localhost";
$username = "tu_usuario";
$password = "tu_contraseña";
$dbname = "universidad";

// Crear conexión
$conn = new mysqli($servername, $username, $password, $dbname);

// Verificar conexión
if ($conn->connect_error) {
    die("Conexión fallida: " . $conn->connect_error);
}

// Función para obtener los datos de la tabla horarios
function obtenerHorarios($conn) {
    $sql = "SELECT horario, clave, materia, aula FROM horarios";
    return $conn->query($sql);
}

// Función para obtener los datos de la tabla materias
function obtenerMaterias($conn) {
    $sql = "SELECT clave, nombre_materia, profesor FROM materias";
    return $conn->query($sql);
}
